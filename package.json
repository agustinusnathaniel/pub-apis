{
  "name": "pub-apis",
  "version": "1.2.0",
  "private": true,
  "author": "agustinusnathaniel",
  "engines": {
    "node": "^24.11.x"
  },
  "packageManager": "pnpm@10.24.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "sharp",
      "unrs-resolver"
    ]
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev",
    "build": "next build",
    "turbo": "pnpm dlx turbo@2.6.3",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "biome:check": "biome check --no-errors-on-unmatched --error-on-warnings",
    "biome:fix": "pnpm biome:check --write",
    "biome:ci": "biome ci",
    "start": "next start",
    "lint:fix": "eslint src --fix && pnpm format",
    "format": "prettier --write src",
    "type:check": "tsc --noEmit",
    "check:turbo": "pnpm turbo biome:check type:check",
    "up-interactive": "pnpm up -i",
    "up-latest": "pnpm up-interactive -L",
    "release": "standard-version",
    "push-release": "git push --follow-tags origin main",
    "prepare": "husky"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toast": "^1.2.15",
    "axios": "^1.13.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "1.1.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.561.0",
    "next": "^16.0.10",
    "next-pwa": "^5.6.0",
    "next-seo": "^6.7.1",
    "next-themes": "^0.4.6",
    "nextjs-progressbar": "^0.0.16",
    "octokit": "^5.0.5",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.68.0",
    "react-icons": "^5.5.0",
    "sonner": "^2.0.7",
    "swr": "^2.3.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/eslintrc": "^3.3.3",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/lodash": "^4.17.21",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "commitlint": "^20.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.6",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "standard-version": "^9.5.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  }
}
